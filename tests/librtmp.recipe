# Bibop recipe for librtmp

# See more: https://kaos.sh/bibop
# Recipe generated by bop (https://kaos.sh/bop)

pkg librtmp librtmp-devel

fast-finish yes

command "-" "Check shared libs"
  lib-loaded librtmp.so.*

command "-" "Check static libs"
  exist /usr/lib64/librtmp.a
  mode /usr/lib64/librtmp.a 644

command "-" "Check headers"
  lib-header librtmp

command "-" "Check pkg-config"
  lib-config librtmp

