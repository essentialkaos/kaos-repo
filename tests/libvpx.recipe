# Bibop recipe for libvpx

# See more: https://kaos.sh/bibop
# Recipe generated by bop (https://kaos.sh/bop)

pkg libvpx libvpx-devel libvpx-utils

fast-finish yes

command "-" "Check apps"
  app decode_to_md5
  app decode_with_drops
  app postproc
  app set_maps
  app simple_decoder
  app simple_encoder
  app tiny_ssim
  app twopass_encoder
  app vp8cx_set_ref
  app vp9_lossless_encoder
  app vp9_spatial_svc_encoder
  app vp9cx_set_ref
  app vpx_temporal_svc_encoder
  app vpxdec
  app vpxenc

command "-" "Check shared libs"
  lib-loaded libvpx.so.*

command "-" "Check headers"
  lib-header vpx

command "-" "Check pkg-config"
  lib-config vpx

