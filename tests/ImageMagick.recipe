# Bibop recipe for ImageMagick

# See more: https://kaos.sh/bibop
# Recipe generated by bop (https://kaos.sh/bop)

pkg ImageMagick ImageMagick-c++ ImageMagick-c++-devel ImageMagick-devel ImageMagick-djvu ImageMagick-doc ImageMagick-libs ImageMagick-perl

fast-finish yes

command "-" "Check apps"
  app Magick++-config
  app Magick-config
  app MagickCore-config
  app MagickWand-config
  app Wand-config
  app animate
  app compare
  app composite
  app conjure
  app convert
  app display
  app identify
  app import
  app mogrify
  app montage
  app stream

command "-" "Check configuration files and directories"
  exist /etc/ImageMagick-6/coder.xml

  exist /etc/ImageMagick-6/colors.xml

  exist /etc/ImageMagick-6/delegates.xml

  exist /etc/ImageMagick-6/log.xml

  exist /etc/ImageMagick-6/magic.xml

  exist /etc/ImageMagick-6/mime.xml

  exist /etc/ImageMagick-6/policy.xml

  exist /etc/ImageMagick-6/quantization-table.xml

  exist /etc/ImageMagick-6/thresholds.xml

  exist /etc/ImageMagick-6/type-apple.xml

  exist /etc/ImageMagick-6/type-dejavu.xml

  exist /etc/ImageMagick-6/type-ghostscript.xml

  exist /etc/ImageMagick-6/type-urw-base35.xml

  exist /etc/ImageMagick-6/type-windows.xml

  exist /etc/ImageMagick-6/type.xml

command "-" "Check shared libs"
  lib-loaded libMagick++-6.Q16.so.*
  lib-loaded libMagickCore-6.Q16.so.*
  lib-loaded libMagickWand-6.Q16.so.*

command "-" "Check headers"
  lib-header ImageMagick-6
  lib-header ImageMagick-6

command "-" "Check pkg-config"
  lib-config ImageMagick
  lib-config ImageMagick++
  lib-config ImageMagick++-6.Q16
  lib-config ImageMagick-6.Q16
  lib-config Magick++
  lib-config Magick++-6.Q16
  lib-config MagickCore
  lib-config MagickCore-6.Q16
  lib-config MagickWand
  lib-config MagickWand-6.Q16
  lib-config Wand
  lib-config Wand-6.Q16

