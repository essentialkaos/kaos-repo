# Bibop recipe for geos

# See more: https://kaos.sh/bibop
# Recipe generated by bop (https://kaos.sh/bop)

pkg geos geos-devel geos-python

fast-finish yes

command "-" "Check environment"
  app geos-config

command "-" "Check shared libs"
  lib-loaded libgeos_c.so.*

command "-" "Check headers"
  lib-header geos
  lib-header geos.h
  lib-header geos_c.h

command "-" "Check Python 2 installation"
  exist {PYTHON2_SITEARCH}/geos
  dir {PYTHON2_SITEARCH}/geos

  python-module geos

