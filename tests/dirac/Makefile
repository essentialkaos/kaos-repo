################################################################################

ARCH := $(shell getconf LONG_BIT)
LIB_NAME := dirac

################################################################################

.PHONY = all clean

################################################################################

all:
	$(CC) -o test_$(ARCH) -l $(LIB_NAME)_encoder -l $(LIB_NAME)_decoder -I /usr/include/$(LIB_NAME) test.c

clean:
	rm -f test_64

################################################################################
