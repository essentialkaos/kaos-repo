# Bibop recipe for dirac

# See more: https://kaos.sh/bibop
# Recipe generated by bop (https://kaos.sh/bop)

pkg dirac dirac-devel dirac-docs dirac-libs

fast-finish yes

command "-" "Check apps"
  app create_dirac_testfile.pl
  app dirac_BMPtoRGB
  app dirac_RGBtoBMP
  app dirac_RGBtoUYVY
  app dirac_RGBtoYUV411
  app dirac_RGBtoYUV420
  app dirac_RGBtoYUV422
  app dirac_RGBtoYUV444
  app dirac_UYVYtoRGB
  app dirac_UYVYtoYUV422
  app dirac_YUV411toRGB
  app dirac_YUV420Down2x2
  app dirac_YUV420ItoYUV422I
  app dirac_YUV420pt75filter
  app dirac_YUV420toRGB
  app dirac_YUV420toYUV422
  app dirac_YUV422ItoYUV420I
  app dirac_YUV422toRGB
  app dirac_YUV422toUYVY
  app dirac_YUV422toYUV420
  app dirac_YUV444toRGB
  app dirac_decoder
  app dirac_encoder
  app dirac_instrumentation
  app dirac_unittest

command "-" "Check shared libs"
  lib-loaded libdirac_decoder.so.*
  lib-loaded libdirac_encoder.so.*

command "-" "Check headers"
  lib-header dirac

command "-" "Check pkg-config"
  lib-config dirac

