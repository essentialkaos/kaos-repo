  app gcps2vec.py
  app gcps2wld.py
  app gdal-config
  app gdal2tiles.py
  app gdal2xyz.py
  app gdal_auth.py
  app gdal_calc.dox
  app gdal_calc.py
  app gdal_contour
  app gdal_edit.dox
  app gdal_edit.py
  app gdal_fillnodata.py
  app gdal_grid
  app gdal_merge.py
  app gdal_polygonize.dox
  app gdal_polygonize.py
  app gdal_proximity.dox
  app gdal_proximity.py
  app gdal_rasterize
  app gdal_retile.py
  app gdal_sieve.py
  app gdal_translate
  app gdaladdo
  app gdalbuildvrt
  app gdalchksum.py
  app gdalcompare.dox
  app gdalcompare.py
  app gdaldem
  app gdalenhance
  app gdalident.py
  app gdalimport.py
  app gdalinfo
  app gdallocationinfo
  app gdalmanage
  app gdalmove.dox
  app gdalmove.py
  app gdalserver
  app gdalsrsinfo
  app gdaltindex
  app gdaltransform
  app gdalwarp
  app mkgraticule.py
  app nearblack
  app ogr2ogr
  app ogrinfo
  app ogrlineref
  app ogrtindex
  app pct2rgb.py
  app rgb2pct.py
  app testepsg

command "-" "Check shared libs"
  lib-loaded libgdal.so.*

command "-" "Check headers"
  lib-header gdal

command "-" "Check pkg-config"
  lib-config gdal

command "-" "Check Python 2 installation"
  exist {PYTHON2_SITEARCH}/osgeo
  dir {PYTHON2_SITEARCH}/osgeo

  exist {PYTHON2_SITEARCH}/osgeo/__init__.py

  python-module osgeo
