# Bibop recipe for iksemel
# See more: https://kaos.sh/bibop

pkg iksemel iksemel-devel

fast-finish yes

var lib_linking_flags "-liksemel"

command "-" "Check environment"
  app ikslint
  app iksperf
  app iksroster

command "-" "Check shared libs"
  lib-loaded libiksemel.so.*

command "-" "Check headers"
  lib-header iksemel.h

command "-" "Check pkg-config"
  lib-config iksemel

command "gcc -o test_bin {lib_linking_flags} test.c" "Compile binary with iksemel"
  exit 0
  exist test_bin

+command "./test_bin" "Execute built binary"
  exit 0
