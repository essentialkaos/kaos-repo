# Bibop recipe for gavl
# See more: https://kaos.sh/bibop

pkg gavl gavl-devel

fast-finish yes

var lib_linking_flags "-lgavl"

command "-" "Check shared libs"
  lib-loaded libgavl.so.*

command "-" "Check headers"
  lib-header gavl

command "-" "Check pkg-config"
  lib-config gavl

command "gcc -o test_bin {lib_linking_flags} test.c" "Compile binary with gavl"
  exit 0
  exist test_bin

+command "./test_bin" "Execute built binary"
  exit 0
