/var/log/clickhouse-server/*.log {
    daily
    missingok
    rotate 7
    compress
    delaycompress
    notifempty
    su clickhouse clickhouse
    create 640 clickhouse clickhouse
    sharedscripts
    postrotate
        [ -f /var/run/clickhouse-server/clickhouse-server.pid ] && kill -USR1 `cat /var/run/clickhouse-server/clickhouse-server.pid`
    endscript
}
